            <li><a href="/?path=<%=fav.path%>">Fav 1</a></li>
          <% end %>
          </ul>
        </li>
        <li class="headlink"><a href="/podcast">Podcast</a></li>
        <li class="headlink"><a href="/pref">Preferences</a></li>
      </ul>
    </div><br style="clear: both;">
   
   <div id='container' class='centre round'>
      <%= yield %>
   </div>
